//program to output a given number of even numbers, in order, given user input

#include <iostream>

int main()
{
	std::cout << "Please enter a postive integer: ";
	int numEvens{};
	std::cin >> numEvens;
	
	for (int i = 1; i <= (numEvens * 2); i++)
	{
		if (i % 2 == 0)
			std::cout << i << '\n';
		else
			continue;
		
	}

	return 0;
}
